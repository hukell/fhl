<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:background="@color/black20"
         android:gravity="center_vertical"
         android:paddingLeft="15dp"
         android:paddingRight="15dp"
         android:layout_height="35dp">
       <TextView
           android:layout_width="wrap_content"
           android:text="4444"
           android:id="@+id/tv_ddh"
           android:textColor="@color/color_111111"
           android:textSize="18sp"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content"/>

         <TextView
           android:layout_width="wrap_content"
           android:text="4月24日12:00送达"
           android:id="@+id/tv_time"
           android:layout_centerInParent="true"
           android:textColor="@color/color_666666"
           android:textSize="14sp"
           android:layout_height="wrap_content"/>

         <TextView
             android:layout_width="wrap_content"
             android:text="待处理"
             android:id="@+id/tv_status"
             android:textColor="@color/color_111111"
             android:textSize="18sp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_height="wrap_content"/>

     </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:id="@+id/tv_name"
            android:textColor="@color/color_111111"
            android:layout_height="wrap_content"/>
            <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_phone"
            android:textSize="14sp"
            android:textColor="@color/color_4e76e5"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:text="成都市市"
        android:id="@+id/tv_address"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/color_111111"
        android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="1px"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginRight="15dp"
           android:layout_marginLeft="15dp"
           android:orientation="horizontal"
           android:id="@+id/lin_ps_name"
           android:layout_height="40dp">
           <TextView
               android:layout_width="wrap_content"
               android:text="配送员:"
               android:id="@+id/tv_ps_name"
               android:textSize="14sp"
               android:textColor="@color/color_111111"
               android:layout_gravity="center_vertical"
               android:layout_height="wrap_content"/>

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textColor="@color/color_666666"
               android:textSize="14sp"
               android:id="@+id/tv_ps_phone"
               android:background="@color/color_e5e5e5"
               android:drawableRight="@mipmap/img_xlh"
               android:gravity="center"
               android:paddingRight="20dp"
               android:layout_marginLeft="10dp"
               android:layout_gravity="center_vertical"
               android:layout_height="30dp"/>

           <ImageView
               android:layout_width="wrap_content"
               android:src="@mipmap/img_phone"
               android:layout_gravity="center_vertical"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               android:id="@+id/img_call"
               android:layout_height="wrap_content"/>

       </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="1px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="商品"
                android:drawablePadding="5dp"
                android:textColor="@color/color_111111"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/img_sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="展开"
                android:id="@+id/tv_sq"
                android:drawablePadding="5dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_4e76e5"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/img_sl"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

         <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:id="@+id/item_recyclerview"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_height="0dp"></android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_marginTop="15dp"
            android:layout_height="1px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="总价"
                android:textSize="14sp"
                android:textColor="@color/color_111111"
                android:gravity="center"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="￥39.00"
                android:id="@+id/tv_zj"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_111111"
                android:gravity="center"
                android:layout_height="match_parent"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="1px"/>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_margin="15dp"
             android:paddingTop="10dp"
             android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="退款"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/refund_left"
                android:background="@drawable/shape_item"
                android:layout_height="wrap_content"/>

             <TextView
                android:layout_width="wrap_content"
                android:text="退款"
                android:id="@+id/refund_right"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_item"
                android:layout_height="wrap_content"/>

         </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
    </LinearLayout>