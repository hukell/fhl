<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:background="@drawable/selector_item"
              android:layout_height="match_parent">


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

  <TextView
    android:layout_width="match_parent"
    android:text="期望送达时间12:00"
    android:textColor="@color/color_e94d4e"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:textSize="15sp"
    android:id="@+id/tv_time"
    android:layout_height="wrap_content"/>

    <TextView
    android:layout_width="wrap_content"
    android:text="12:00"
    android:textColor="@color/color_e94d4e"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:textSize="15sp"
    android:layout_alignParentRight="true"
    android:id="@+id/tv_time_over"
    android:layout_height="wrap_content"/>

  </RelativeLayout>
    <TextView
    android:layout_width="match_parent"
    android:text="店名"
    android:textColor="@color/color_111111"
     android:drawableLeft="@mipmap/img_qu"
    android:drawablePadding="5dp"
    android:textSize="18sp"
    android:gravity="center_vertical"
    android:id="@+id/tv_name"
    android:layout_height="wrap_content"/>

    <TextView
    android:layout_width="match_parent"
    android:text="起始地址"
    android:textColor="@color/color_666666"
     android:drawableLeft="@mipmap/img_fx"
    android:drawablePadding="5dp"
    android:textSize="12sp"
    android:layout_marginLeft="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:id="@+id/tv_star_address"
    android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="送达地点"
        android:textColor="@color/color_111111"
        android:drawableLeft="@mipmap/img_song"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:id="@+id/tv_end_address"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="王先生:15680157655"
        android:textColor="@color/color_3077b5"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/tv_phone"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="待取货"
        android:id="@+id/tv_sure"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_login"
        android:layout_height="40dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorBgColor"
        android:layout_height="5dp"/>

</LinearLayout>